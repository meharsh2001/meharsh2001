<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
<link rel="stylesheet" href="style.css"> 
<body onload="loading()">  
    <div id="loading"></div>

    <%- include('./partials/header.ejs'); -%>
<div class="img3">
<span>
<div style="  position: absolute;top: 36%;left: 60%;text-align: center;"><button id="myOutput" style="border: 0ch;" > 
    <i class="fas fa-eye-slash"  onclick="myFunction()"></i></button></div></span>
<div class="container">
    <div class="row " style="  margin-left: 20% ;  width: 53%;">
        <div class="thumbnail login-padding">
            <h1 style="text-align:center;"> Login </h1>
            <div style="width:100%;  margin: 25px auto">
                <form action="/login" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="username" required="required">
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="myInput" type="password" name="password" placeholder="password" required="required">
                    </div><br>
                    <div class="form-group">
                        <button class="btn btn-default btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a class="btn btn-default btn-primary btn-block" href="/register">Register Here</a>
            </div>
        </div>
        
    </div>
    
</div>
<script>
    function myFunction() {
    var y = document.getElementById("myOutput");
    var x = document.getElementById("myInput");
      if (x.type === "password") {
        x.type = "text";
        x.style="background-color: rgba(105, 104, 104, 0.034);";
        y.style="background-color: grey; border: 0ch;";
      } else {
        x.type = "password";
        x.style="background-color: white";
        y.style="background-color: white; border: 0ch;";
      }
    }
    </script>
<div style="text-align: center" class="alert alert-<%=type%>">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong><%=intro%></strong>  <%=message%>
  </div>
</div>
<div class="bg-warning">    
  <%- include('./partials/footer.ejs'); -%>        </div>  
    <script>
        var preloader = document.getElementById('loading'); 
        function loading() {
          preloader.style.display ='none';
        }
      </script>
      
      </body>
